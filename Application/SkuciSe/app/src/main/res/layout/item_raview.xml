<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="18dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/review_item_backround"
                >

              <androidx.cardview.widget.CardView
                  android:id="@+id/slikaLikaStoJeNapisaoRecenziju"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  app:layout_constraintLeft_toLeftOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:layout_margin="10dp"
                  app:cardCornerRadius="80dp"
                  >

                  <ImageView
                      android:layout_width="80dp"
                      android:layout_height="80dp"
                      android:src="@drawable/woman"
                      android:scaleType="fitXY"
                      />

              </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/nazivOcenjivaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/slikaLikaStoJeNapisaoRecenziju"
                    android:fontFamily="@font/gilroy_bold"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:text="Aleksandra"
                    />

                <TextView
                    android:id="@+id/vremeRecenzije"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@id/nazivOcenjivaca"
                    app:layout_constraintLeft_toRightOf="@id/slikaLikaStoJeNapisaoRecenziju"
                    android:fontFamily="@font/gilroy_light"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="07-11-21"
                    />

                <TextView
                    android:id="@+id/ocenaRecenzije"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/vremeRecenzije"
                    app:layout_constraintLeft_toRightOf="@id/slikaLikaStoJeNapisaoRecenziju"
                    android:fontFamily="@font/gilroy_light"
                    android:textColor="@color/orange"
                    android:textSize="15sp"
                    android:text="Ocena 4.6"
                    />

                <TextView
                    android:id="@+id/textRecenzije"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/slikaLikaStoJeNapisaoRecenziju"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                   android:fontFamily="@font/gilroy_light"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:text="Fenomenalno mesto i odlicna lokacija"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>